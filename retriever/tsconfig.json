{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "importHelpers": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "compileOnSave": true,
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}